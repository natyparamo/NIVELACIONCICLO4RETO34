<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintLayaout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/lbCodigo"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:text="Codigo"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imagenView"
        app:layout_constraintTop_toTopOf="@+id/imagenView"
        tools:textColor="#671375"
        tools:textStyle="bold" />

    <ImageView
        android:id="@+id/imagenView"
        android:layout_width="141dp"
        android:layout_height="131dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_foto" />

    <TextView
        android:id="@+id/lbPaginas"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:text="Paginas"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/lbCodigo"
        app:layout_constraintTop_toBottomOf="@+id/lbCodigo"
        tools:textColor="#671375"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/lbTitulo"
        android:layout_width="161dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:text="Titulo"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenView"
        tools:textColor="#BD32D5"
        tools:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>